{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets": ["./src/game/assets/index.ts"],
      "@constants": ["./src/game/constants/index.ts"],
      "@components": ["./src/game/components/index.ts"],
      "@entities": ["./src/game/entities/index.ts"],
      "@scenes": ["./src/game/scenes/index.ts"],
      "@systems": ["./src/game/systems/index.ts"],
      "@config": ["./src/game/config/index.ts"],
      "@utils": ["./src/game/utils/index.ts"],
      "@types": ["./src/game/types/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
